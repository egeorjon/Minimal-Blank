{
    "name": "{{ .Site.Params.Manifest.name | default .Site.Title }}",
    "short_name": "{{ .Site.Params.Manifest.shortName | default .Site.Title }}",
    "display": "{{ .Site.Params.Manifest.display | default "browser" }}",
    "start_url": "{{ .Site.Params.Manifest.startUrl | default "/" }}",
    {{- with .Site.Params.Manifest.backgroundColor -}}
    "background_color": "{{ .  }}",
    {{- end -}}
    "theme_color": "{{ .Site.Params.Manifest.themeColor | default .Site.Params.ThemeColor | default "#ffffff" }}",
    {{- with (.Site.Params.Manifest.description | default .Site.Params.Description) }}
    "description": "{{ . }}",
    {{- end }}
    {{- with (.Site.Params.Manifest.orientation | default "portrait") }}
    "orientation": "{{ . }}",
    {{- end }}
    {{- with (.Site.Params.Manifest.scope | default "/") }}
    "scope": "{{ . }}",
    {{- end }}
    {{ $icon_list := slice -}}
    {{- if (fileExists "themes/minimal-blank/static/assets/favicons/icon-android_96x96.png") -}}
        {{- $icon_list = $icon_list | append (dict "src" ("assets/favicons/icon-android_96x96.png" | relURL) "sizes" "96x96" "type" "image/png") -}}
    {{- end }}
    {{- if (fileExists "themes/minimal-blank/static/assets/favicons/icon-android_192x192.png") -}}
        {{- $icon_list = $icon_list | append (dict "src" ("assets/favicons/icon-android_192x192.png" | relURL) "sizes" "192x192" "type" "image/png") -}}
    {{- end }}
    {{- if (fileExists "themes/minimal-blank/static/assets/favicons/icon-android_96x96.png") -}}
        {{- $icon_list = $icon_list | append (dict "src" ("assets/favicons/icon-android_512x512.png" | relURL) "sizes" "512x512" "type" "image/png") -}}
    {{- end }}
    {{- if gt (len $icon_list) 0 -}}
    "icons":
      {{ $icon_list | jsonify (dict "indent" "  ") }}
    {{- end -}}
  }