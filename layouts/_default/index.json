{{- $.Scratch.Add "index" slice -}}
{{- range .Site.RegularPages -}}
    {{- $.Scratch.Add "index" (dict "title" .Title "tags" .Params.tags "categories" .Params.categories "contents" .Plain "permalink" .Permalink "section" .Parent.Name "publish" (.Date.Format .Site.Params.FormatDate | default "2-Jan-2006") "reading" .ReadingTime ) -}}
{{- end -}}
searchIndex = {{- $.Scratch.Get "index" | jsonify -}}
