{{- define "header" -}}
<div class="container">
    <div class="row">
        <div class="col">
            {{- partial "breadcrumb.html" . -}}
            <h1 id="page-title">{{ .Title  | markdownify }}</h1>
        </div><!-- col -->
    </div><!-- row -->
</div><!-- container -->
{{- end -}}
{{- define "main" -}}
<div class="container">
  <section id="search-form" class="row">
    <h2>{{- i18n "search-form" -}}</h2>
    <form action="{{ .Permalink }}" method="GET" class="form-group col">
      <label for="search-query" class="form-label visually-hidden">{{- i18n "search-please-enter" -}}</label>
      <input type="text" class="form-control" id="search-query" aria-describedby="searchHelp" name="s" placeholder="{{- i18n "what-you-looking-for" -}}">
      <div id="searchHelp" class="form-text visually-hidden">{{- i18n "search-help" -}}</div>
      <button type="submit" class="btn btn-primary">{{- i18n "search" -}}</button>
    </form>
  </section>
  <section id="search-results" class="d-none row row-cols-1" >
    <h2 id="search-results-title" class="col">{{- i18n "search-results" -}}</h2>
    <div id="search-results-items">
    </div>
  </section>
</div><!-- container -->
<script id="search-result-template" type="text/x-js-template">
  <article class="col-12 post">
    <header class="post-header">
      <ul class="post-meta">
        ${ isset categories }<li class="post-category"><span class="visually-hidden">in</span> <span class="in-category">${categories}</span></li>${ end }
        ${ isset section }<li class="post-section"><i class="fas fa-folder-open"></i><span class="visually-hidden">{{- i18n "In" -}}</span> <span class="in-category">${section}</span></li>${ end }
        ${ isset reading }<li class="post-read"><i class="fas fa-clock" aria-hidden="true"></i> <span class="visually-hidden" aria-label="hidden">{{- i18n "reading" -}}</span> ${reading} {{- i18n "mins" -}}</li>${ end }
        ${ isset publish }<li class="post-date"><i class="fas fa-calendar-alt"></i><span class="visually-hidden">{{ i18n "posted-on" -}}</span> <time class="entry-date published" datetime="${publish}">${publish}</time></li>${ end }
      </ul>
      <h3 class="post-title"><a href="${link}" rel="bookmark">${title}</a></h3>
    </header>
    <div class="post-summary">
      <p>${summary}</p>
    </div>
    <footer class="post-footer">
        ${ isset tags }<ul class="post-meta"><li class="post-tags"><i class="fas fa-tags"></i> ${tags}</li></ul>${ end }
    </footer>
  </article>
</script>
{{- end -}}

